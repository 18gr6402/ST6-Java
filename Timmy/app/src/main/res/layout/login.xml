        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_marginTop="106dp"
        android:checked="true"
        android:onClick="handleCheckClinic"
        android:text="LÃ¦ge" />

    <Button
