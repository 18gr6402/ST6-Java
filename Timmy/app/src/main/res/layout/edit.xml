<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".dk.gr6402.controller.EditCtrl">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cprTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CPR-nummer:" />

            <EditText
                android:id="@+id/cprField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/cprTxt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gentag CPR-nummer:" />

            <EditText
                android:id="@+id/cprField2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/nyhaTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NYHA-klassifikation:" />

            <Spinner
                android:id="@+id/nyhaChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/firstNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fornavn:" />

            <EditText
                android:id="@+id/firstNameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/lastNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Efternavn:" />

            <EditText
                android:id="@+id/lastNameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/passwordTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adgangskode:" />

            <EditText
                android:id="@+id/passwordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/passwordTxt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gentag adgangskode:" />

            <EditText
                android:id="@+id/passwordField2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnResetThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="handleResetThreshold"
                android:text="Nulstil tærskelværdi" />

            <Button
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="handleOk"
                android:text="OK" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="handleCancel"
                android:text="Annullér" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>